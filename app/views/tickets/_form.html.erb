<%= form_with(model: @ticket, local: true) do |form| %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field">
    <%= form.label "Route:  #{@train.route.name}" %>
  </div>

  <div class="field">
    <%= form.label "Train:  #{@train.number}" %>
  </div>

  <div class'field'>
    <%= form.hidden_field :train_id, value: @train.id %>
  </div>

  <div class="field">
    <%= form.label 'Passenger name' %>
    <%= form.text_field :first_name, class: 'form-control col-3', required: true %>
  </div>

  <div class="field">
    <%= form.label 'Passenger surname' %>
    <%= form.text_field :last_name, class: 'form-control col-3', required: true %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
