<%= form_with(model: [:admin, @railway_station], local: true) do |form| %>

  <%= render 'common/errors', resource: @railway_station %>

  <div class="field">
    <%= form.text_field :title, class: 'form-control col-md-3' %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-primary' %>
  </div>
<% end %>
