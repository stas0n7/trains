<%= form_with(model: [:admin, @train, @sv_carriage], local: true) do |form| %>
  <%= render 'common/errors', resource: @sv_carriage %>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats, class: 'form-control col-3' %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
