<%= form_with(model: [:admin, @train, @carriage], local: true) do |form| %>
  <%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, options_for_select([['Coupe', 'CoupeCarriage'],
                                               ['SV', 'SvCarriage'],
                                               ['Economy', 'EconomyCarriage'],
                                               ['Seated', 'SeatedCarriage']
                                              ]) %>
  </div>

  <div class="field-top" style='display:block'>
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field-bottom" style='display:block'>
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field-side-top" style='display:none'>
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats %>
  </div>

  <div class="field-side-bottom" style='display:none'>
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats %>
  </div>

  <div class="field-seated" style='display:none'>
    <%= form.label :seated_seats %>
    <%= form.text_field :seated_seats %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
