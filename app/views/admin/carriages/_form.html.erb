<%= form_with(model: [:admin, @train, @carriage], local: true) do |form| %>
  <%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, options_for_select([['Coupe', 'CoupeCarriage'],
                                               ['SV', 'SvCarriage'],
                                               ['Economy', 'EconomyCarriage'],
                                               ['Seated', 'SeatedCarriage']
                                              ]),{}, class: 'form-control col-2' %>
  </div>

  <div class="field-top" style='display:block'>
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats, class: 'input-top form-control col-2', required: true %>
  </div>

  <div class="field-bottom" style='display:block'>
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats, class: 'input-bottom form-control col-2', required: true %>
  </div>

  <div class="field-side-top" style='display:none'>
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats, class: 'input-side-top form-control col-2' %>
  </div>

  <div class="field-side-bottom" style='display:none'>
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats, class: 'input-side-bottom form-control col-2' %>
  </div>

  <div class="field-seated" style='display:none'>
    <%= form.label :seated_seats %>
    <%= form.text_field :seated_seats, class: 'input-seated form-control col-2' %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
<%= javascript_pack_tag 'carriages', 'data-turbolinks-track': 'reload' %>
