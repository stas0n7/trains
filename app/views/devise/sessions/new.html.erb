<h2><%= t('common.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('common.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-3', required: true %>
  </div>

  <div class="field">
    <%= f.label t('.password') %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-3', required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('.remember') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('common.login'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
