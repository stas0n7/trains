<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<% if @route.trains.empty? %>
  <p>No trains on this route</p>
<% else %>
  <strong>Trains on the route:</strong>
  <ul>
    <% @route.trains.each do |train| %>
      <li><%= train.number %></li>
    <% end %>
  </ul>
<% end %>

<% if @route.railway_stations.empty? %>
  <strong>No stations on the route</strong>
<% else %>
  <strong>Stations on the route:</strong>
  <ul>
    <% @route.railway_stations.each do |station| %>
        <li><%= station.title %></li>
    <% end %>
  </ul>
<% end %>

<p>
  <%= link_to 'Edit', edit_route_path(@route) %> |
  <%= link_to 'Back', routes_path %>
</p>
